{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "removeComments": true,
    "moduleResolution": "node",
    "lib": ["es5", "es6", "es7", "dom"]
  },
  "include": ["./src/ts/**/*"],
  "exclude": ["node_modules"]
}
